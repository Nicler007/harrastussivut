      var otsikkoElementti = document.getElementById("vaihtuva-otsikko");
      var varit = ["red", "green", "blue", "orange", "purple"]; 
      var indeksi = 0;
      function vaihdaVari() {
          otsikkoElementti.style.color = varit[indeksi];
          indeksi = (indeksi + 1) % varit.length; 
      }
      setInterval(vaihdaVari, 600); 
